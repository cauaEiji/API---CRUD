{
  "info": {
    "name": "API Gerenciamento de Dispositivos",
    "_postman_id": "b4e5a1d3-7c8b-4c12-91b1-3c44d8f0a6ab",
    "description": "Coleção Postman para testar a API Flask de gerenciamento de dispositivos com autenticação JWT.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:5000"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Autenticação",
      "item": [
        {
          "name": "Registrar Usuário",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"123456\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth", "register"] }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"123456\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth", "login"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.access_token) {",
                  "    pm.environment.set('token', json.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Categorias",
      "item": [
        {
          "name": "Criar Categoria",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Servidores\",\n  \"descricao\": \"Equipamentos de backend\"\n}"
            },
            "url": { "raw": "{{base_url}}/categorias", "host": ["{{base_url}}"], "path": ["categorias"] }
          }
        },
        {
          "name": "Listar Categorias",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/categorias", "host": ["{{base_url}}"], "path": ["categorias"] }
          }
        },
        {
          "name": "Atualizar Categoria",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Servidores Atualizados\",\n  \"descricao\": \"Categoria modificada\"\n}"
            },
            "url": { "raw": "{{base_url}}/categorias/1", "host": ["{{base_url}}"], "path": ["categorias", "1"] }
          }
        },
        {
          "name": "Excluir Categoria",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/categorias/1", "host": ["{{base_url}}"], "path": ["categorias", "1"] }
          }
        }
      ]
    },
    {
      "name": "Dispositivos",
      "item": [
        {
          "name": "Criar Dispositivo",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Servidor 1\",\n  \"serial\": \"SRV-001\",\n  \"categoria_id\": 1,\n  \"status\": \"ativo\"\n}"
            },
            "url": { "raw": "{{base_url}}/dispositivos", "host": ["{{base_url}}"], "path": ["dispositivos"] }
          }
        },
        {
          "name": "Listar Dispositivos",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/dispositivos", "host": ["{{base_url}}"], "path": ["dispositivos"] }
          }
        },
        {
          "name": "Buscar Dispositivo por ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/dispositivos/1", "host": ["{{base_url}}"], "path": ["dispositivos", "1"] }
          }
        },
        {
          "name": "Atualizar Dispositivo",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Servidor Principal\",\n  \"status\": \"inativo\"\n}"
            },
            "url": { "raw": "{{base_url}}/dispositivos/1", "host": ["{{base_url}}"], "path": ["dispositivos", "1"] }
          }
        },
        {
          "name": "Excluir Dispositivo",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/dispositivos/1", "host": ["{{base_url}}"], "path": ["dispositivos", "1"] }
          }
        }
      ]
    }
  ]
}
